<Window x:Class="DeltaBrainsJSCAppFE.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:DeltaBrainsJSCAppFE.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d"
        
        
        Title="Đăng nhập hệ thống" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        DataContext="{StaticResource LoginVM}"
        Name="loginWindow">

    <Window.Resources>
        <Style x:Key="ShadowEffect" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                      ShadowDepth="5" 
                                      Color="#40000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
    </Window.InputBindings>

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                <GradientStop Color="#FF2196F3" Offset="0"/>
                <GradientStop Color="#FF90CAF9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Login form -->
        <Border Background="White" 
                CornerRadius="10"
                Width="400" Height="350"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Style="{StaticResource ShadowEffect}">
            <StackPanel Margin="30" VerticalAlignment="Center">
                <TextBlock Text="ĐĂNG NHẬP" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#FF2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Email đăng nhập" Margin="0,5" 
                           Foreground="#000" 
                           FontWeight="SemiBold"
                           FontFamily="Time New Romant"/>
                <TextBox x:Name="txtUsername" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="40" 
                         Padding="10"
                         Margin="0,0,0,15"
                         BorderBrush="#FF90CAF9"
                         TabIndex="0"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" Margin="0,5" 
                           Foreground="#000" 
                           FontFamily="Time New Romant"  
                           FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" 
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Height="40" 
                             Padding="10"
                             Margin="0,0,0,25"
                             BorderBrush="#FF90CAF9"
                             TabIndex="1"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Content="Đăng nhập" 
                        Height="45"
                        Background="#49a9f5"
                        Foreground="#000"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=loginWindow}"
                        TabIndex="2"/>

                <!-- Forgot password -->
                <TextBlock Text="Quên mật khẩu?" 
                           HorizontalAlignment="Right" 
                           Margin="0,10,0,0"
                           Foreground="#FF2196F3"
                           Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
